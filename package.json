{
  "name": "libro-prisma",
  "version": "1.0.0",
  "description": "Library Management System API using Prisma ORM, Node.JS, PostgreSQL, Express.JS and TypeScript",
  "main": "index.js",
  "author": "Tonmoy Talukder",
  "license": "MIT",
  "scripts": {
    "postinstall": "prisma generate",
    "build": "tsc",
    "start": "node ./dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "prettier": "prettier --ignore-path .gitignore --write \"./src/**/*.+(js|ts|json)\"",
    "prettier:fix": "npx prettier --write src"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/node": "^22.9.0",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/express": "^5.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "http-status-codes": "^2.3.0",
    "zod": "^3.23.8"
  }
}
